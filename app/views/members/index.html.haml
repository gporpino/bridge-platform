- model_class = Member
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:birthdate)
      %th= model_class.human_attribute_name(:observation)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @members.each do |member|
      %tr
        %td= link_to member.id, member_path(member)
        %td= member.name
        %td= member.birthdate
        %td= member.observation
        %td= l member.created_at
        %td
          = link_to t('.edit'), edit_member_path(member), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy'), member_path(member), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_member_path, :class => 'btn btn-primary'
